{
  "expo": {
    "name": "Learnify",
    "packagerOpts": {
      "config": "metro.config.js",
      "sourceExts": ["js", "jsx"]
    },
    "slug": "learnify-app-ui",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/learnify-app-icon-inner.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/learnify-app-logo-with-background.png",
      "resizeMode": "contain",
      "backgroundColor": "#590d82"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/learnify-app-icon-inner.png",
        "backgroundColor": "#590d82"
      },
      "package": "com.brightpath.learnify"
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    }
  }
}
